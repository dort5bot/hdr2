# 🔐 TELEGRAM BOT AYARLARI
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_IDS=admin_id_1,admin_id_2,admin_id_3

# 🌐 WEBHOOK AYARLARI
USE_WEBHOOK=false
WEBHOOK_URL=https://your-domain.com
WEBHOOK_PATH=/webhook
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=3000

# 📧 EMAIL HESAP AYARLARI
MAIL_BEN=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here

# 📨 TAKİP EDİLECEK KAYNAK EMAIL'LER
MAIL_K1=source1@example.com
MAIL_K2=source2@example.com
MAIL_K3=source3@example.com
MAIL_K4=source4@example.com

# 🖥️ EMAIL SUNUCU AYARLARI
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# 📊 MONITORING AYARLARI
PROMETHEUS_PORT=9090

# ⚙️ UYGULAMA AYARLARI
MAX_FILE_SIZE=10485760
PROCESS_TIMEOUT=300
BATCH_SIZE=100

# 📝 LOGLAMA AYARLARI
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
