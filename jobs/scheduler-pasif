import logging
from aiogram import Bot

logger = logging.getLogger(__name__)

class TaskScheduler:
    """Pasif scheduler - geliÅŸtirme aÅŸamasÄ±nda"""
    
    def __init__(self):
        self.is_running = False
        self.enabled = False
    
    async def start(self, bot: Bot = None):
        """Scheduler baÅŸlatma (pasif)"""
        logger.info("ğŸ›‘ Scheduler is disabled for development")
        self.is_running = False
        return self
    
    async def stop(self):
        """Scheduler durdurma"""
        logger.debug("Scheduler stop called (disabled)")
    
    async def run_manual_cleanup(self):
        """Manuel temizlik (elle Ã§alÄ±ÅŸtÄ±rÄ±labilir)"""
        from .cleanup import cleanup_manager
        logger.info("ğŸ”„ Manual cleanup started")
        return await cleanup_manager.perform_complete_cleanup()

# Global instance
task_scheduler = TaskScheduler()

async def scheduler(bot: Bot = None):
    """ZamanlayÄ±cÄ±yÄ± baÅŸlat"""
    return await task_scheduler.start(bot)

async def stop_scheduler():
    """ZamanlayÄ±cÄ±yÄ± durdur"""
    await task_scheduler.stop()
