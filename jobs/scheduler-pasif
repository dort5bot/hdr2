"""

🎯 3. Tamamen Pasif Etmek - Boş Scheduler
Alternatif basit scheduler.py:
"""
import logging
from aiogram import Bot

logger = logging.getLogger(__name__)

class TaskScheduler:
    """Pasif scheduler - geliştirme aşamasında"""
    
    def __init__(self):
        self.is_running = False
        self.enabled = False
    
    async def start(self, bot: Bot = None):
        """Scheduler başlatma (pasif)"""
        logger.info("🛑 Scheduler is disabled for development")
        self.is_running = False
        return self
    
    async def stop(self):
        """Scheduler durdurma"""
        logger.debug("Scheduler stop called (disabled)")
    
    async def run_manual_cleanup(self):
        """Manuel temizlik (elle çalıştırılabilir)"""
        from .cleanup import cleanup_manager
        logger.info("🔄 Manual cleanup started")
        return await cleanup_manager.perform_complete_cleanup()

# Global instance
task_scheduler = TaskScheduler()

async def scheduler(bot: Bot = None):
    """Zamanlayıcıyı başlat"""
    return await task_scheduler.start(bot)

async def stop_scheduler():
    """Zamanlayıcıyı durdur"""
    await task_scheduler.stop()
